<%= form_with(model: entry, local: true) do |form| %>
  <% if entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
        <% entry.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


 
  
  <%= form.hidden_field :user_id, :value => current_user.id %>
  

  <div class="field">
    <%= form.label :reason_id %>
    <%= form.collection_select :reason_id, Reason.all, :id, :description %>
  </div>

  <div class="field">
    <%= form.label :notes %>
    <%= form.text_field :notes %>
  </div>

   <div class="field">
    <%= form.label :session_date %>
    <%= form.date_field :session_date %>
  </div>

  <div class="field">
    <%= form.label :timespent %>
    <%= form.text_field :timespent, placeholder: "1.50" %>
  </div>
  
    <%= form.file_field :evidence, direct_upload: true, class: "form-control file-field" %>

 
  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
