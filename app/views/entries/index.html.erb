<div class="container">
<p id="notice"><%= notice %></p>

<h1>Session Entries</h1>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Reason</th>
      <th>Timespent</th>
      <th>Recording</th>
      <th>Notes</th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.user.fullname %></td>
        <td><%= entry.reason.description %></td>
        <td><%= entry.timespent %></td>
        <% if entry.evidence %>
          <td><%= link_to 'Attachment',url_for(entry.evidence) %></td>
          <% else %>
          No Attachment
          <% end %>
        <td><%= entry.notes %></td>
      </tr>
    <% end %>
  </tbody>
</div>

<br>

<%= link_to 'New Entry', new_entry_path %>
</table>
